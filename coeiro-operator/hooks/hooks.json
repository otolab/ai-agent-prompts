{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|compact",
        "hooks": [
          {
            "type": "callback",
            "callback": "mcp__coeiro-operator__operator_assign"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "say-coeiroink '入力待ちです'"
          }
        ]
      }
    ]
  }
}
